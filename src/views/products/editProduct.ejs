<!DOCTYPE html>
<html lang="es">
    <%- include('../partials/head')%> 
<body>
    

    <%- include('../partials/header')%> 


<main>


    
    <br>
    <div class="contenedor-formularioCreate">
        <form action="/products/<%=producto.id%>?_method=PUT" method="POST" enctype="multipart/form-data" >
    
            <fieldset>
                <legend>Editar producto</legend>
               <div class="contenido-form">

                <div class="art-product">
                        <label for="">Nombre del producto</label>
                        <input type="text" name="name" value="<%=producto.name%>" required>
                </div>


                <div class="art-product">

                    <label for="">Categoría</label>
                    <select name="categoryId">
                        <% categories.forEach(category => { %>
                            <% if (category.id==producto.categoryId) { %>
                                <option selected="selected"value="<%= category.id%> "><%= category.name%></option>
                            <% }else{ %> 
                                <option value="<%= category.id%> "><%= category.name%></option>
                                <% } %> 
                            
                        <% }) %>
                    </select>
                </div>
            
  
                <div class="art-product">
                    <label for="">Precio </label>
                    <input type="text" name="price" value="<%=producto.price%>" required>
                </div>

                <div class="art-product">
                    <label for="">Sección</label>
                    <select name="section">
                        <option value="todos">Todos</option>
                        <option value="ofertas">Ofertas</option>
                        <option value="destacado">Destacado</option>
                    </select>
                </div>

                <div class="textarea">
                        <label for="">Descripción</label>
                        <textarea name="description" rows="8" cols="25" ><%=producto.description%></textarea>
                </div>

                <div class="art-product">
                    <label for="">Descripción extendida</label>
                        <textarea name="extended_description" rows="8" cols="25" placeholder="Descripción extendida del producto:" ></textarea>
                </div>
                <div class="art-product">
                    <label for="">Stock</label>
                    <input type="text" name="stock">
                </div>
                <div class="art-product">
                    <label for="">Stock minimo</label>
                    <input type="text" name="stock_min">
                </div>
                <div class="art-product">
                    <label for="">Stock maximo</label>
                    <input type="text" name="stock_max">
                </div>

                <div class="art-product">
                    <label for="">Color</label>
                    <select name="colorId">
                        <% colors.forEach(color => { %>
                            <% if (color.id == producto.colorId) { %>
                                <option selected="selected" value="<%= color.id %> "><%= color.name  %> </option>
                            <% } else { %>
                            
                                <option value="<%= color.id %> "><%= color.name  %> </option>
                                <% } %> 
                        <% }) %>
                    </select>
                </div>

                <div class="art-product">
                    <label for="">Marca</label>
                    <select name="brandId">
                        <% brands.forEach(brand => { %>
                            <% if (brand.id == producto.brandId) { %>
                                <option selected="selected" value="<%= brand.id %> "><%= brand.name  %> </option>
                            <% } else { %>
                            
                                <option value="<%= brand.id %> "><%= brand.name  %> </option>
                                <% } %> 
                        <% }) %>
                    </select>
                </div>

                

                <div class="art-product">
                    <label>Imagen</label>
                    <input type="file"  class="img" name="image" placeholder="Imagen del artículo" >
                </div>
               
                        <div class="btn-form">
                            
                            <button type="submit">Guardar cambios</button>
                    </div>
                    
                </div>
            
                </form>
                <!--Seguir editando-->
                <div class="btn-form-eliminar">
                    <form action="/products/delete/<%=producto.id%>?_method=delete" method="POST">   
                        <button type="submit">Eliminar producto</button>
                    </form> 
    
            </div>
            </fieldset>
                <div class="editar">
                    <p><a href='/products/create' class="seguir"><i class="fas fa-chevron-circle-left"></i>Crear nuevo producto</a></p>
                </div>
    </div>
</main>




    <%- include('../partials/footer')%>

</body>
</html>